<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

     <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
         android:visibility="visible"
        android:layout_height="200dp"
        android:text="Who is the 44th President of the United States?"
         android:background="@drawable/card_background"
         android:elevation="5dp"
         android:textSize = "40sp"
         android:gravity = "center"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/flashcard_answer"
        android:background="#ffc62b"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Barack Obama"
        android:textSize = "40sp"
        android:gravity = "center" />
    <TextView
        android:id="@+id/flashcard_choice1"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0a234a"
        android:text="Bill Clinton"
        android:textSize = "30sp"
        android:textColor="@color/white"
        android:gravity = "center"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/flashcard_choice2"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/flashcard_choice1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0a234a"
        android:text="George H. W. Bush"
        android:textSize = "30sp"
        android:textColor="@color/white"
        android:gravity = "center"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/flashcard_choice3"
        android:layout_below="@+id/flashcard_choice2"
        android:background="#0a234a"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Barack Obama"
        android:textSize = "30sp"
        android:textColor="@color/white"
        android:gravity = "center"
        android:visibility="invisible"/>

    <ImageView
        android:gravity = "center"
        android:layout_below="@+id/flashcard_choice3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/toggle_choices_visibility"
        android:src="@drawable/eye"/>



</RelativeLayout>